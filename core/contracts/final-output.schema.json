{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Final Resume Output Schema",
  "description": "Schema completo do output final contendo elegibilidade + currículo",
  "type": "object",
  "required": ["versao", "data_geracao", "elegibilidade", "curriculo"],
  "properties": {
    "versao": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Versão do schema",
      "example": "1.0.0"
    },
    "data_geracao": {
      "type": "string",
      "format": "date",
      "description": "Data de geração do currículo",
      "example": "2025-02-16"
    },
    "vaga_alvo": {
      "type": "object",
      "properties": {
        "titulo": { "type": "string" },
        "empresa": { "type": "string" },
        "localizacao": { "type": "string" }
      },
      "description": "Informações da vaga alvo"
    },
    "elegibilidade": {
      "type": "object",
      "required": ["pontuacao_estrelas", "status", "pontos_fortes", "pontos_fracos", "recomendacao"],
      "properties": {
        "pontuacao_estrelas": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5
        },
        "pontuacao_percentual": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "status": {
          "type": "string",
          "enum": ["NÃO ELEGÍVEL", "BAIXA ELEGIBILIDADE", "PARCIALMENTE ELEGÍVEL", "ELEGÍVEL", "ALTAMENTE ELEGÍVEL"]
        },
        "pontos_fortes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "pontos_fracos": {
          "type": "array",
          "items": { "type": "string" }
        },
        "gaps_criticos": {
          "type": "array",
          "items": { "type": "string" }
        },
        "sugestoes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "recomendacao": {
          "type": "string",
          "enum": ["NÃO PROSSEGUIR", "PROSSEGUIR COM ATENÇÃO", "PROSSEGUIR"]
        }
      }
    },
    "curriculo": {
      "type": "object",
      "required": ["meta", "header", "core_competencies", "experience"],
      "properties": {
        "meta": {
          "type": "object",
          "properties": {
            "version": { "type": "string" },
            "last_updated": { "type": "string", "format": "date" },
            "language": { "type": "string", "default": "pt-BR" },
            "target_level": {
              "type": "string",
              "enum": ["junior", "pleno", "senior", "tech-lead", "staff", "principal"]
            }
          }
        },
        "header": {
          "type": "object",
          "required": ["name", "headline", "contact"],
          "properties": {
            "name": { "type": "string" },
            "headline": { "type": "string" },
            "location": {
              "type": "object",
              "properties": {
                "city": { "type": "string" },
                "state": { "type": "string" },
                "remote": { "type": "boolean" }
              }
            },
            "contact": {
              "type": "object",
              "required": ["email"],
              "properties": {
                "email": { "type": "string", "format": "email" },
                "phone": { "type": "string" },
                "whatsapp": { "type": "string" },
                "linkedin": { "type": "string", "format": "uri" },
                "github": { "type": "string", "format": "uri" },
                "portfolio": { "type": "string", "format": "uri" }
              }
            }
          }
        },
        "summary": {
          "type": "string",
          "minLength": 50,
          "maxLength": 600,
          "description": "Resumo profissional (opcional)"
        },
        "core_competencies": {
          "type": "object",
          "properties": {
            "languages_runtime": { "type": "array", "items": { "type": "string" } },
            "frameworks_libraries": { "type": "array", "items": { "type": "string" } },
            "databases": { "type": "array", "items": { "type": "string" } },
            "cloud_infrastructure": { "type": "array", "items": { "type": "string" } },
            "messaging_queues": { "type": "array", "items": { "type": "string" } },
            "testing_quality": { "type": "array", "items": { "type": "string" } },
            "devops_ci_cd": { "type": "array", "items": { "type": "string" } },
            "methodologies": { "type": "array", "items": { "type": "string" } }
          }
        },
        "experience": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["company", "role", "period", "highlights"],
            "properties": {
              "company": { "type": "string" },
              "role": { "type": "string" },
              "period": {
                "type": "object",
                "required": ["start"],
                "properties": {
                  "start": { "type": "string", "pattern": "^\\d{4}-\\d{2}$" },
                  "end": { "type": "string", "pattern": "^(\\d{4}-\\d{2}|current)$" }
                }
              },
              "location": {
                "type": "object",
                "properties": {
                  "city": { "type": "string" },
                  "state": { "type": "string" },
                  "remote": { "type": "boolean" }
                }
              },
              "highlights": {
                "type": "array",
                "minItems": 2,
                "maxItems": 6,
                "items": { "type": "string" }
              },
              "stack": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "projects": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "description"],
            "properties": {
              "name": { "type": "string" },
              "type": {
                "type": "string",
                "enum": ["work", "open-source", "personal", "freelance"]
              },
              "url": { "type": "string", "format": "uri" },
              "description": { "type": "string" },
              "impact": { "type": "array", "items": { "type": "string" } },
              "technologies": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "education": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["institution", "degree"],
            "properties": {
              "institution": { "type": "string" },
              "degree": { "type": "string" },
              "period": {
                "type": "object",
                "properties": {
                  "start": { "type": "string" },
                  "end": { "type": "string" }
                }
              }
            }
          }
        },
        "certifications": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "issuer"],
            "properties": {
              "name": { "type": "string" },
              "issuer": { "type": "string" },
              "date": { "type": "string" },
              "credential_id": { "type": "string" }
            }
          }
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["language", "proficiency"],
            "properties": {
              "language": { "type": "string" },
              "proficiency": {
                "type": "string",
                "enum": ["nativo", "fluente", "avançado", "intermediário", "básico"]
              }
            }
          }
        }
      }
    }
  }
}